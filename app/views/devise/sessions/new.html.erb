<div class="row justify-content-center">
  <div class="col-4">
    <div class="card  ">
      <div class="card-body">
        <h5 class="card-title">Log in</h5>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "test@test.com" , :class => 'form-control'%>
            </div>

            <div class="form-group">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off",placeholder: "***********" , :class => 'form-control'%>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="form-group form-check">
                  <%= f.check_box :remember_me , :class => 'form-check-input'%>
                  <%= f.label :remember_me %>
                </div>
            <% end -%>

            <div class="form-group">
              <%= f.submit "Log in" ,:class => 'btn btn-outline-success'%>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
